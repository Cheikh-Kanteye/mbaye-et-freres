generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")  
  directUrl = env("POSTGRES_URL_NON_POOLING")  
}

model Produit {
  id              Int       @id @default(autoincrement())
  nom             String
  description     String
  prix            Float
  specifications  String
  categorie       Categorie @relation(fields: [categorieId], references: [id])
  categorieId     Int
  images          Image[]
}

model Categorie {
  id          Int       @id @default(autoincrement())
  nom         String
  description String
  produits    Produit[]
}

model Service {
  id          Int       @id @default(autoincrement())
  nom         String
  description String
  image       String
}

model Contact {
  id          Int       @id @default(autoincrement())
  nom         String
  email       String
  telephone   String
  message     String
  dateEnvoi   DateTime  @default(now())
}

model Temoinage {
  id              Int       @id @default(autoincrement())
  nom             String
  contenu         String
  datePublication DateTime  @default(now())
}

model Utilisateur {
  id          Int       @id @default(autoincrement())
  nom         String
  email       String    @unique
  motDePasse  String 
}

model FAQ {
  id       Int    @id @default(autoincrement())
  question String
  reponse  String
}

model Image {
  id        Int       @id @default(autoincrement())
  url       String
  produit   Produit   @relation(fields: [produitId], references: [id])
  produitId Int
}


